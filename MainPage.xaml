<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotepadMaui.MainPage"
             BackgroundColor="Gainsboro">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PageBackgroundColor">Gainsboro</Color>
            <Color x:Key="PrimaryColor">Gainsboro</Color>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="#1F2937" />
                <Setter Property="FontSize" Value="16" />
            </Style>
            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="Margin" Value="5" />
            </Style>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="DarkGray" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Margin" Value="5" />
                <Setter Property="Padding" Value="10" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="10">
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*">
            <Button Grid.Column="0"
                    BorderColor="black"
                    BorderWidth="1"
                    Text="⚙️"
                    FontSize="20"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    Margin="0,0,10,0"
                    Clicked="OnSettingsClicked"/>
            
            <Label Grid.Column="1"
                   Text="Bloc De Notas" 
                   FontAttributes="Bold" 
                   FontSize="24"
                   VerticalOptions="Center"
                   />
        </Grid>

        <!-- Search Bar -->
        <Entry x:Name="SearchBar" 
               Placeholder="Buscar notas..." 
               PlaceholderColor="Gainsboro"
               Grid.Row="1" 
               TextChanged="OnSearchTextChanged" />

        <!-- Notes List -->
        <CollectionView x:Name="NotesCollectionView" 
                       Grid.Row="2" 
                       SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.LeftItems>
                            <SwipeItems Mode="Reveal">
                                <SwipeItem Text="Eliminar"
                                          BackgroundColor="Red"
                                          IconImageSource="delete.png"
                                          Invoked="OnDeleteNoteClicked"
                                          CommandParameter="{Binding .}" />
                            </SwipeItems>
                        </SwipeView.LeftItems>
                        
                        <Frame Margin="5" 
                               Padding="10" 
                               BackgroundColor="Gainsboro"
                               BorderColor="black"
                               CornerRadius="10">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnNoteTapped" 
                                                     CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <StackLayout>
                                <Label Text="{Binding Title}" 
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Preview}" 
                                       FontAttributes="Italic" 
                                       LineBreakMode="TailTruncation" />
                                <Label Text="{Binding Date}" 
                                       FontSize="12" 
                                       HorizontalOptions="End" />
                            </StackLayout>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Floating Action Button -->
        <Button Text="+" 
                BackgroundColor="DarkGray"
                BorderColor="Black"
                BorderWidth="1"
                FontSize="24" 
                WidthRequest="60" 
                HeightRequest="60" 
                CornerRadius="30"
                HorizontalOptions="End" 
                VerticalOptions="End" 
                Margin="10"
                Clicked="OnAddNoteClicked" 
                Grid.Row="3" />
    </Grid>
</ContentPage>
